{% extends "./layouts/app.twig" %}
{% block style %}
	<style>
		table {
			border: 1px solid;
		};
	</style>
{% endblock %}
{% block title %}
	Cuisines
{% endblock %}
{% block content %}
<div class="mx-auto max-w-4xl">
	<div class="flex justify-between my-4">
		<h2 class="text-2xl font-bold">Cuisines</h2>
		<a href="/cuisine/create" class="px-3 py-1 text-lg font-medium bg-neutral-100 text-gray-700 rounded hover:bg-bow hover:text-neutral-100">Create</a>
	</div>
	<table class="border-collapse table-fixed w-full">
		<thead>
		<tr class="bg-gray-50">
			<th class="w-64 py-2 px-4 border border-gray-300 border-r-0 text-left text-base font-medium text-gray-500 uppercase tracking-wider">Name</th>
			<th class="w-16 py-2 px-4 border border-gray-300 border-l-0 text-right text-base font-medium text-gray-500 uppercase tracking-wider"></th>
		</tr>
		</thead>
		<tbody class="bg-white divide-y divide-gray-200">
		{% for cuisine in cuisines %}
		<tr>
			<td class="py-2 px-4 border border-gray-300 border-r-0 text-base font-medium text-stripe"><a href="/cuisine/show?id={{ cuisine.id }}">{{ cuisine.name }}</a></td>
			<td class="py-2 px-4 border border-gray-300 border-l-0 text-right"><a href="/cuisine/edit?id={{ cuisine.id }}" class="px-3 py-1 text-sm font-medium bg-neutral-100 text-bow rounded hover:bg-bow hover:text-white">Edit</a></td>
		</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
